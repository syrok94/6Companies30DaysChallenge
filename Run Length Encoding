/*You are required to complete this function */

string encode(string src)
{     
  
  string ans="";
  int n=src.size();
  
  int i=0;
  
  while(i<n){
      cout<<src[i];
      int j=1;
      while(i<n-1 && src[i]==src[i+1]){
          i++;
          j++;
      }  
      i++;
      cout<<j;
  }
}     
 
